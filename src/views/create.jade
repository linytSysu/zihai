extends layout

block content
  //- form.edit-form(action='/create' method='post')
  div.edit-form
    input(id='title' type='text' name='title')
    br
    input(id='url' type='text' name='url')
    br
    textarea(id='content' rows='35' cols='100' name='content')
    //- button.button(type='button') Preview
    br
    div#tags-editor
      span#tags-shower
      input(id='tags' type='text' name='tags')
    a(id='show-tags' href='#tags') choose a tag
    br
    input.button(id='create-submit' type='button' value='submit')
