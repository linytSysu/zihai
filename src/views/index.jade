extends layout

block content
  each blog in blogs
    div.blog-block
      a(href='/blog/#{blog.url}')
        h1.blog-title #{blog.title}
      div.blog-infos
        span.blog-info
          i.fa.fa-tag
          each tag in blog.tags
            a(href='/tag/#{tag.name}')
              code #{tag.name}
        span.blog-info
          <i class='fa fa-calendar'></i> #{blog.updateTime}
      div.blog-content
        !{blog.preview}
