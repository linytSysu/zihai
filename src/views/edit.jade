extends layout

block content
  form(action='/update' method='post')
    input(type='hidden' name='id' value='#{blog._id}')
    p 标题
    input(type='text' name='title' value='#{blog.title}')
    br
    p 链接
    input(type='text' name='url' value='#{blog.url}')
    br
    p 内容
    textarea(type='text' name='content') #{blog.content}
    br
    p 标签
    input(type='text' name='tags' value='#{blog.tags[0].name}')
    a#show-tags(href='#') choose a tag
    br
    br
    input(type='submit' value='submit')
